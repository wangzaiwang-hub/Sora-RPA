{
  "manifest_version": 3,
  "name": "Sora Auto Publisher",
  "version": "2.0.0",
  "description": "自动发布 Sora 未发布的视频",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "management",
    "alarms",
    "webRequest"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup-auto.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
